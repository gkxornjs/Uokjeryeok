{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "types": ["node"],        // ✅ process 등 Node 전역 타입 로딩
    "skipLibCheck": true,     // ✅ 타입 패키지 내부 검사는 건너뜀
    "strict": true,
    "noImplicitAny": false    // ✅ 당장은 any 허용(빨리 빌드 통과용)
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}
