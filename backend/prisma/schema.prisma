// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(cuid())
  email      String      @unique
  name       String
  password   String
  records    Record[]
  onboarding Onboarding?      // 1:1 관계
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Onboarding {
  id           String   @id @default(cuid())
  userId       String   @unique
  gender       String?      // 선택 입력이면 ? 로
  ageGroup     String?
  occupation   String?
  primaryGoals String[]     // ["study","health",...]
  completed    Boolean  @default(false)

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Record {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  content   Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
